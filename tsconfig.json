{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2016",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["ESNext"],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
          ]
    },
    "exclude": [
        "node_modules"
    ]
}