        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["ESNext"],
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"]
        
